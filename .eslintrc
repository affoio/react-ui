{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-hooks",
    "prettier",
    "import",
    "jsx-a11y"
  ],
  "extends": [
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "printWidth": 120
      }
    ],
    "max-len": [
      "error",
      120
    ],
    "semi": [
      2,
      "always"
    ],
    "react/jsx-one-expression-per-line": 0,
    "react/jsx-filename-extension": 0,
    "no-console": 0,
    "no-underscore-dangle": 0,
    "react/prefer-stateless-function": 0,
    "padded-blocks": 0,
    "no-script-url": 0,
    "import/first": 0,
    "import/extensions": 0,
    "react/forbid-prop-types": 0,
    "consistent-return": 0,
    "arrow-parens": [
      2,
      "as-needed"
    ],
    "no-return-assign": 0,
    "react/sort-comp": 0,
    "react/prop-types": 0,
    "no-trailing-spaces": [
      "error",
      {
        "skipBlankLines": true
      }
    ],
    "jsx-a11y/no-static-element-interactions": 0,
    "redux-saga/no-unhandled-errors": 0,
    "import/prefer-default-export": 0,
    "react/jsx-no-bind": [
      2,
      {
        "ignoreRefs": false,
        "allowArrowFunctions": true,
        "allowBind": false
      }
    ],
    "jsx-a11y/accessible-emoji": 0,
    "camelcase": 0,
    "jsx-a11y/mouse-events-have-key-events": 0,
    "jsx-a11y/label-has-for": 0,
    "jsx-a11y/iframe-has-title": 0,
    "react/require-default-props": 0,
    "jsx-a11y/alt-text": 0,
    "jsx-a11y/no-noninteractive-element-interactions": 0,
    "quotes": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "react/destructuring-assignment": 0,
    "import/no-extraneous-dependencies": 0,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react/jsx-wrap-multilines": 0
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "__DEV__": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./config/internals/webpack/webpack.base.babel.js"
      },
      "node": {
        "moduleDirectory": [
          "node_modules"
        ],
        "paths": [
          "./"
        ]
      }
    }
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}